<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="FeedBackChoiceItem">
        <item name="android:background">@drawable/list_item_bg_color</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:textColor">@color/bottom_btn1</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
    
    <style name="FeedBackEt">
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingRight">22dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorHint">@color/feedback_et_hint</item>
        <item name="android:textSize">13sp</item>
        <item name="android:singleLine">false</item>
        <item name="android:scrollHorizontally">false</item>
    </style>

</resources>
